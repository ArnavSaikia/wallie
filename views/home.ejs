<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallpaper Gallery</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
        }

        html{
            height: 100%;
        }

        body{
            min-height: 100%;
        }
    </style>
    <link rel="stylesheet" href="/styles/nav.css">
    <link rel="stylesheet" href="/styles/gallery.css">
    <script src="https://kit.fontawesome.com/06b14e7a2c.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="gallery-body">
        <% Entries.forEach(entry => { %>
            <%- include('./partials/card.ejs', {entry}) %>
        <% }); %>

    </div>



    <script>
        function addToLiked(name,url){
            const uploadObject = {name,url};
            fetch('/liked', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(uploadObject)
            })
            .then(res => console.log("successfully uploaded"))
            .catch(err => console.log(err));
        }
    </script>
</body>
</html>